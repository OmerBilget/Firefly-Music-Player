<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/AddDialogEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/foreground_1"
        android:ems="10"
        android:layout_marginHorizontal="10dp"
        android:hint="enter a list name"
        android:inputType="textPersonName"
        android:textColor="@color/primary_text_color"
        android:textColorHint="#B3FF3E6C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addDialogTitle" />

    <TextView
        android:id="@+id/addDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center|left"
        android:layout_marginStart="20dp"
        android:text="Add a PlayList"
        android:textSize="20dp"
        android:textColor="@color/foreground_1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/AddDialogEditText"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/AddDialogCancelButton"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/foreground_1"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="CANCEL" />

        <View
            android:id="@+id/divider2"
            android:layout_width="2dp"
            android:layout_height="match_parent"

            android:background="@color/foreground_1" />

        <TextView
            android:id="@+id/addDialogOKButton"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/foreground_1"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="OK" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>